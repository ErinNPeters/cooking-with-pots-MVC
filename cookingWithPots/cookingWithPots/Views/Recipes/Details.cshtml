@model cookingWithPots.Models.Data.Recipe

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<br />
<div>
    <h4>@Html.DisplayFor(model => model.Description)</h4>
    <hr />

    <ul>
        @foreach (var ingredient in @Model.Ingredients)
        {
            <li> @Html.DisplayFor(model => ingredient.Content)</li>
        }
    </ul>

    <ol>
        @foreach (var instruction in @Model.Instructions)
        {
            <li> @Html.DisplayFor(model => instruction.Content)</li>
        }
    </ol>
    <br />
    <div>
        @if(Model.Image != null)
        {
            <img alt="@Model.Title" src="data:image;base64,@System.Convert.ToBase64String(Model.Image.ImageData)" width="250" height="250" />
        }
    </div>
    <br />
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.RecipeId">Edit</a>
        <a class="btn btn-success" asp-action="Index">Back to List</a>
    </div>
</div>